<root>
    <styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/custom_game/shared_scoreboard_styles.vcss_c" />
		<include src="file://{resources}/styles/arena_top_scoreboard.css" />
    </styles>

    <scripts>
        <include src="file://{resources}/scripts/util.js" />
        <include src="file://{resources}/scripts/shared_scoreboard_updater.js" />
        <include src="file://{resources}/scripts/arena_top_scoreboard.js" />
    </scripts>

  <Panel hittest="false" class="CustomHudRoot">
	<Panel hittest="false" id="TopBarScoreboard">
		<Panel hittest="false" id="ScoreboardContainer">
			<Panel hittest="false" id="LeftInjectXMLFile" />
			<Panel hittest="false" id="MultiteamScoreboard">
				<Panel id="duelTimerPanel">
					<Label id="duelTimerLabel_base" text="#duel_timer_label" />
					<Label id="duelTimerLabel" text="00:00" />
				</Panel>
				<Panel id="timerPanel">
					<Panel id="timerImgPanel" >
						<Image id="timerImage" src="file://{resources}/images/custom_game/scoreboard/scoreboard_iec.png" />
						<Image id="timerImageMask1" src="file://{resources}/images/custom_game/scoreboard/scoreboard_ief.png" />
						<Image id="timerImageMask2" src="file://{resources}/images/custom_game/scoreboard/scoreboard_if2.png" />
						<Image id="timerImageMask3" src="file://{resources}/images/custom_game/scoreboard/scoreboard_ifd.png" />
					</Panel>
					<Label id="timerLabel" text="00:00:00" />
				</Panel>
				<Panel id="KillGoalPanel">
					<Label id="KillGoalLabel_base" text="#kill_goal_tooltip" />
					<Label id="KillGoalLabel" text="" />
				</Panel>
			</Panel>
			<Panel hittest="false" id="RightInjectXMLFile" />
		</Panel>
	  </Panel>
  </Panel>
</root>