<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/styles/panorama_shop.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/util.js" />
		<include src="file://{resources}/scripts/panorama_shop.js" />
	</scripts>
	<snippets>
		<snippet name="SmallItem">
			<Panel class="SmallItemPanel" draggable="true">
				<Button id="SmallItemButton">
					<DOTAItemImage hittest="false" id="SmallItemImage" />
					<Label hittest="false" id="SmallItemStock"/>
					<Label hittest="false" id="StockTimer" />
					<Panel hittest="false" id="StockOverlay" />
				</Button>
			</Panel>
		</snippet>
	</snippets>
	<Panel hittest="false" class="base">
		<Panel hittest="true" id="ShopBase" class="ShopBase_Out">
			<Panel id="ItembuildsPanel">
				<Panel id="Itembuild_select" />
				<Panel class="SimpleRow">
					<Label text="#panorama_shop_itembuild_author"/>
					<Label class="SimpleRowValue" id="Itembuild_author" />
				</Panel>
				<Panel class="SimpleRow">
					<Label text="#panorama_shop_itembuild_patch"/>
					<Label class="SimpleRowValue" id="Itembuild_patch" />
				</Panel>
				<Panel id="ItembuildPanelsRoot" />
			</Panel>
			<Panel id="ShopItemBasePanel">
				<Panel id="ShopItemList">
					<Panel id="ShopSearch">
						<TextEntry id="ShopSearchEntry" oninputsubmit="SearchItems()" placeholder="#panorama_shop_search_placeholder"/>
					</Panel>
					<Panel id="ShopTabs" />
					<Panel id="ShopItems">
						<Panel id="ShopItemsBase" />
						<Panel id="ShopSearchOverlay" />
					</Panel>
				</Panel>
				<Panel id="ItemRecipeBox">
					<Panel id="ItemRecipeBoxRows">
						<Panel class="ItemRecipeBoxRow" id="ItemRecipeBoxRow1" />
						<Panel class="ItemRecipeBoxRow" id="ItemRecipeBoxRow2" />
						<Panel class="ItemRecipeBoxRow" id="ItemRecipeBoxRow3" />
					</Panel>
					<Panel hittest="false" id="ItemRecipeBoxDrops">
						<Image class="UnitItemlikeRecipePanel" id="ItemRecipeBoxDrops_npc_arena_boss_heaven" src="file://{images}/custom_game/units/npc_arena_boss_heaven.png" style="position: 59px 66px 0;"/>
						<Image class="UnitItemlikeRecipePanel" id="ItemRecipeBoxDrops_npc_arena_boss_hell" src="file://{images}/custom_game/units/npc_arena_boss_hell.png" style="position: 194px 66px 0;"/>
						<Image class="UnitItemlikeRecipePanel" id="ItemRecipeBoxDrops_npc_arena_boss_l1_v1" src="file://{images}/custom_game/units/npc_arena_boss_l1_v1.png" style="position: 1px 120px 0;"/>
						<Image class="UnitItemlikeRecipePanel" id="ItemRecipeBoxDrops_npc_arena_boss_l1_v2" src="file://{images}/custom_game/units/npc_arena_boss_l1_v2.png" style="position: 64px 120px 0;"/>
						<Image class="UnitItemlikeRecipePanel" id="ItemRecipeBoxDrops_npc_arena_boss_central" src="file://{images}/custom_game/units/npc_arena_boss_central.png" style="position: 128px 120px 0;"/>
						<Image class="UnitItemlikeRecipePanel" id="ItemRecipeBoxDrops_npc_arena_boss_l2_v1" src="file://{images}/custom_game/units/npc_arena_boss_l2_v1.png" style="position: 190px 120px 0;"/>
						<Image class="UnitItemlikeRecipePanel" id="ItemRecipeBoxDrops_npc_arena_boss_l2_v2" src="file://{images}/custom_game/units/npc_arena_boss_l2_v2.png" style="position: 251px 120px 0;"/>
					</Panel>	
				</Panel>
				<Button id="ShowHideItemguidesPanel" hittest="true" onactivate="ShowHideItembuilds()">
					<Label id="ShowHideItemguidesLabel" hittest="false" text="&gt;" />
				</Button>
			</Panel>
		</Panel>
		<!-- <Button hittest="true" id="ShopBtnPanel" onactivate="OpenCloseShop()">
			<Label id="ShopBtnLabel" hittest="false" text="#panorama_shop_shop_label"/>
		</Button> -->
		<Panel hittest="true" id="QuickBuyPanel">
			<Panel class="DropDownValidTarget" hittest="false" />
			<Panel id="QuickBuyPanelItems" />
			<Label id="QuickBuyClearButtonPanel" text="X" onactivate="ClearQuickbuyItems()"/>
			<Panel id="QuickBuyStickyButtonPanel" />
		</Panel>
	</Panel>
</root>
