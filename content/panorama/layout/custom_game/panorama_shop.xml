<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/styles/panorama_shop.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/util.js" />
		<include src="file://{resources}/scripts/panorama_shop.js" />
	</scripts>
	<snippets>
		<snippet name="SmallItem">
			<Panel class="SmallItemPanel" draggable="true">
				<Button id="SmallItemButton">
					<DOTAItemImage hittest="false" id="SmallItemImage" />
					<Label hittest="false" id="SmallItemStock"/>
					<Panel hittest="false" id="SmallItemDropTargetHighlight" />
				</Button>
			</Panel>
		</snippet>
	</snippets>
	<Panel hittest="false" class="base">
		<Panel hittest="true" id="ShopBase" class="ShopBase_Out">
			<Panel id="ItembuildsPanel">
				<Panel id="Itembuild_select" />
				<Panel class="SimpleRow">
					<Label text="#panorama_shop_itembuild_author"/>
					<Label class="SimpleRowValue" id="Itembuild_author" />
				</Panel>
				<Panel class="SimpleRow">
					<Label text="#panorama_shop_itembuild_patch"/>
					<Label class="SimpleRowValue" id="Itembuild_patch" />
				</Panel>
				<Panel id="ItembuildPanelsRoot" />
			</Panel>
			<Panel id="ShopItemBasePanel">
				<Panel id="ShopItemList">
					<Panel id="ShopSearch">
						<TextEntry id="ShopSearchEntry" maxchars="64" oninputsubmit="SearchItems()" placeholder="#panorama_shop_search_placeholder"/>
					</Panel>
					<Panel id="ShopTabs" />
					<Panel id="ShopItems">
						<Panel id="ShopItemsBase" />
						<Panel id="ShopSearchOverlay" />
					</Panel>
				</Panel>
				<Panel id="ItemRecipeBox">
					<Panel class="ItemRecipeBoxRow" id="ItemRecipeBoxRow1" />
					<Panel class="ItemRecipeBoxRow" id="ItemRecipeBoxRow2" />
					<Panel class="ItemRecipeBoxRow" id="ItemRecipeBoxRow3" />
				</Panel>
				<Button id="ShowHideItemguidesPanel" onactivate="ShowHideItembuides()">
					<Label id="ShowHideItemguidesLabel" hittest="false" text="&lt;&lt;&lt;" />
				</Button>
			</Panel>
		</Panel>
		<Button hittest="true" id="ShopBtnPanel" onactivate="OpenCloseShop()">
			<Label id="ShopBtnLabel" hittest="false" text="#panorama_shop_shop_label"/>
		</Button>
		<Panel hittest="true" id="QuickBuyPanel">
			<Panel class="DropDownValidTarget" hittest="false" />
			<Panel id="QuickBuyPanelItems" />
			<Label id="QuickBuyClearButtonPanel" text="X" onactivate="ClearQuickbuyItems()"/>
			<Panel id="QuickBuyStickyButtonPanel" />
		</Panel>
	</Panel>
</root>
