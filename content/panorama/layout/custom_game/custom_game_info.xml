<root>
	<styles>
		<include src="file://{resources}/styles/custom_game_info.css" />
	</styles>
	<script>
		var CurrentPage = -1
		var PAGE_COUNT = 6
		var IsLoaded = false
		function ToggleGameInfoOpenState()
		{
			if ($("#InfoPanel").visible) {
				$("#InfoPanel").visible = false
			} else {
				$("#InfoPanel").visible = true
			}
		}

		function OpenPage(number)
		{
			if (number <= PAGE_COUNT && CurrentPage != number && number > 0) {
				for (i = 1; i <= PAGE_COUNT; i++) {
					$("#Page_content_" + i + "_left").visible = false
					$("#Page_content_" + i + "_right").visible = false
				}
				$("#Page_content_" + number + "_left").visible = true
				$("#Page_content_" + number + "_right").visible = true
				CurrentPage = number
				$("#Page_change_previous").visible = true
				$("#Page_change_next").visible = true
				if (number == PAGE_COUNT) {
					$("#Page_change_next").visible = false
				} else if (number == 1) {
					$("#Page_change_previous").visible = false
				}
				if (IsLoaded) {
					Game.EmitSound("Arena.GUI.BookPageTurn")
				} else {
					IsLoaded = true
				}
			}
		}

		function OpenPagePrevious()
		{
			OpenPage(CurrentPage - 1)
		}

		function OpenPageNext()
		{
			OpenPage(CurrentPage + 1)
		}

		(function() {
			GameEvents.Subscribe("show_custom_game_info", ToggleGameInfoOpenState)
			OpenPage(1)
			ToggleGameInfoOpenState()
		})()
	</script>
