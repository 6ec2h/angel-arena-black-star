<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/styles/minimalistic_hud.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/util.js" />
		<include src="file://{resources}/scripts/minimalistic_hud.js" />
		<include src="file://{resources}/scripts/entity_tooltips.js" />
	</scripts>
	<snippets>
		<snippet name="Ability">
			<Panel class="AbilityPanel" hittest="false">
				<Panel id="ButtonAndLevel" hittest="false">
					<Panel id="UpgradeBorder" hittest="false">
						<Panel id="AbilityStatusBorder" hittest="false">
							<Button id="AbilityButton">
								<DOTAAbilityImage id="AbilityImage" />
								<Image id="PassivesDisabledOverlay" src="file://{resources}/images/custom_game/hud/passive_disabled.png" hittest="false" />
								<Panel id="Cooldown" hittest="false">
									<Panel id="CooldownOverlay" hittest="false" />
									<Label id="CooldownTimer" hittest="false" />
								</Panel>
								<Panel id="ActiveAbility" hittest="false" />
							</Button>
						</Panel>
					</Panel>
					<Label id="HotkeyText" hittest="false" />
					<Label id="ManaCost" hittest="false" />
					<Panel hittest="false" id="AbilityLevelContainer" />
				</Panel>
			</Panel>
		</snippet>

		<snippet name="Buff">
			<Panel hittest="false">
				<Button id="BuffFrame">
					<ProgressBar id="BuffDuration" min="0" max="100" value="100" hittest="false" />
					<DOTAItemImage id="BuffImageItem" src="raw://resource/flash3/images/spellicons/empty.png" scaling="stretch-to-fit-y-preserve-aspect" hittest="false" />
					<Image id="BuffImage" src="raw://resource/flash3/images/spellicons/empty.png" hittest="false" />
					<Label id="StackCount" hittest="false" />
				</Button>
			</Panel>
		</snippet>
	</snippets>

	<Panel hittest="false" class="base">
		<Panel id="Background" hittest="false" />
		<Panel id="DotaHeroStatus" hittest="false">
			<Panel id="HeroAvatarPanel" hittest="false">
				<Panel id="KDAPanel" hittest="false">
					<Label id="KDA_Label_KDAHL" text="#minimalistic_hud_kda" hittest="false"/>
					<Label id="KDA_Value_KDAHL" text="999" hittest="false"/>
				</Panel>
				<Panel id="HeroLevelPanel" hittest="false">
					<Label id="HeroLevelLabel" text="0" hittest="false"/>
					<Button id="LevelUpButton" onactivate="OnLevelUpClicked()">
						<Panel id="LevelUpButtonInset" hittest="false">
							<Label id="LevelUpButtonLabel" text="Level Up"  hittest="false"/>
							<Label id="LevelUpButtonPoints" text="+1"  hittest="false"/>
						</Panel>
					</Button>
				</Panel>
				<Image id="HeroAvatarImage" onactivate="SelectPortraitUnit()" hittest="true">
					<Label id="HeroName" hittest="false"/>
				</Image>
				<ProgressBar id="HeroNextLevel" min="0" max="100" value="100" hittest="false">
					<Label id="HeroNextLevelLabel" text="0/0" hittest="false"/>
				</ProgressBar>
			</Panel>
		</Panel>

		<Label id="DefaultInterfaceHeroName" hittest="false"/>
		<Panel id="AttributesPanel" hittest="false">
			<Panel id="SelectedEntitiesPanel" hittest="false"/>
			<Panel id="AttributesPanelStacks" hittest="false">
				<Panel  class="AttributePanelStack" hittest="false">
					<Panel class="AttributePanel" hittest="false">
						<Image class="AttributePicture" src="file://{resources}/images/custom_game/hud/range.png" hittest="false"/>
						<Label id="DotaAttributeValue_range" class="AttributeValue" text="150" hittest="false"/>
					</Panel>
					<Panel class="AttributePanel" hittest="false">
						<Image class="AttributePicture" src="file://{resources}/images/custom_game/hud/spell_amplify.png" hittest="false"/>
						<Label id="DotaAttributeValue_spell_amplify" class="AttributeValue" text="0%" hittest="false"/>
					</Panel>
					<Panel class="AttributePanelStack" id="AttributePanelStackAttributes" style="vertical-align: bottom; margin: 0px;" onactivate="UpgradeAttributeBonus()" hittest="false">
						<Panel class="AttributePanel" hittest="false">
							<Panel id="DotaAttributePic_1" class="AttributePicture" hittest="false" />
							<Panel class="AttributeValue AttributeValueSublisted" hittest="false">
								<Label id="DotaAttributeValue_1" class="AttributeValueSubelement" text="0" hittest="false"/>
								<Label id="DotaAttributeValue_1_gain" class="AttributeValueSubelement" text=" +(2.5)" hittest="false"/>
							</Panel>
						</Panel>
						<Panel class="AttributePanel" hittest="false">
							<Label id="DotaAttributePic_2" class="AttributePicture" text="â–³" hittest="false" />
							<Panel class="AttributeValue AttributeValueSublisted" hittest="false">
								<Label id="DotaAttributeValue_2" class="AttributeValueSubelement" text="0" hittest="false"/>
								<Label id="DotaAttributeValue_2_gain" class="AttributeValueSubelement" text=" +(2.5)" hittest="false"/>
							</Panel>
						</Panel>
						<Panel class="AttributePanel" hittest="false">
							<Panel id="DotaAttributePic_3" class="AttributePicture" hittest="false" />
							<Panel class="AttributeValue AttributeValueSublisted" hittest="false">
								<Label id="DotaAttributeValue_3" class="AttributeValueSubelement" text="0" hittest="false"/>
								<Label id="DotaAttributeValue_3_gain" class="AttributeValueSubelement" text=" +(2.5)" hittest="false"/>
							</Panel>
						</Panel>
					</Panel>
				</Panel>
				<Panel class="AttributePanelStack" style="vertical-align: top;" hittest="false">
					<Panel class="AttributePanel" hittest="false">
						<Image class="AttributePicture" src="file://{resources}/images/custom_game/hud/attackspeed.png" hittest="false"/>
						<Label id="DotaAttributeValue_attackspeed" class="AttributeValue" text="1.00" hittest="false"/>
					</Panel>
					<Panel id="DotaAttributePanel_damage" class="AttributePanel AttributePanelSublisted" hittest="false">
						<Image class="AttributePicture" src="file://{resources}/images/custom_game/hud/damage.png" hittest="false"/>
						<Panel class="AttributeValue AttributeValueSublisted" hittest="false">
							<Label id="DotaAttributeValue_damage" class="AttributeValueSubelement" text="0 + " hittest="false"/>
							<Label id="DotaAttributeValue_damage_bonus" class="AttributeValueSubelement" text="0" hittest="false"/>
						</Panel>
					</Panel>
					<Panel class="AttributePanel" hittest="false">
						<Image class="AttributePicture" src="file://{resources}/images/custom_game/hud/movespeed.png" hittest="false"/>
						<Label id="DotaAttributeValue_movespeed" class="AttributeValue" text="0" hittest="false"/>
					</Panel>
					<Panel class="AttributePanel" hittest="false">
						<Image class="AttributePicture" src="file://{resources}/images/custom_game/hud/armor.png" hittest="false"/>
						<Label id="DotaAttributeValue_armor" class="AttributeValue" text="0 (0%)" hittest="false"/>
					</Panel>
					<Panel class="AttributePanel" hittest="false">
						<Image class="AttributePicture" src="file://{resources}/images/custom_game/hud/magic_resist.png" hittest="false"/>
						<Label id="DotaAttributeValue_magic_resist" class="AttributeValue" text="0%" hittest="false"/>
					</Panel>
				</Panel>
			</Panel>
		</Panel>

		<Panel id="HPManaBar" hittest="false">
			<Panel id="HPBar_TextPanel" hittest="false">
				<Label id="HPBar_LabelConst" text="0/0" hittest="false" />
				<Label id="HPBar_LabelRegen" text=" + 0.0" hittest="false" />
			</Panel>
			<ProgressBar id="HPBar_Progress" min="0" max="100" value="100" />
			<ProgressBar id="ManaBar_Progress" min="0" max="100" value="100" />
			<Panel id="ManaBar_TextPanel" hittest="false">
				<Label id="ManaBar_LabelConst" text="0/0" hittest="false" />
				<Label id="ManaBar_LabelRegen" text=" + 0.0" hittest="false" />
			</Panel>
		</Panel>
		<Panel id="DeadHeroBlocker" hittest="true">
			<Label text="DEAD"/>
		</Panel>

		<Panel id="BuffsPanel" hittest="false" />
		<Panel id="AbilitiesPanel" hittest="false">
			<Panel id="AbilitiesPanelHittestBlocker" hittest="true" />
			<Panel id="AbilitiesPanelInner" hittest="false" />
		</Panel>
		<Panel id="GoldPanel" onactivate="GoldClicked()">
			<Image id="GoldImage" src="file://{images}/custom_game/hud/coins.png"/>
			<Label id="GoldLabel" text="625"/>
		</Panel>

		<Panel id="CourierControls" hittest="true">
			<Panel id="CourierStatusPanel">
				<Image id="CourierImage" src="file://{resources}/images/custom_game/hud/courier.png" onactivate="SelectCourier()" hittest="true"/>
				<Panel id="CourierBurstPanel">
					<Image id="CourierBurstImage" src="file://{resources}/images/custom_game/hud/courier_speed.png" onactivate="CourierBurst()" hittest="true">
						<Panel id="CourierBurstCooldownPanel">
							<Label id="CourierBurstCooldownLabel" text="0" />
						</Panel>
					</Image>
				</Panel>
			</Panel>
			<Panel id="CourierTargetPanel">
				<Image id="CourierStatusTarget" onactivate="CourierTakeAndTransferItems()" src="file://{resources}/images/custom_game/hud/courier_empty.png" hittest="true"/>
			</Panel>
			<Panel id="CourierDeadOverlay" hittest="true">
				<Label id="CourierDeadTime" hittest="true"/>
			</Panel>
		</Panel>

		<Panel id="PlayerControls" hittest="false">
			<!-- <Label id="PlayerControls_1x1" class="PlayerControlsButton" text="1x1" onactivate="GameEvents.SendCustomGameEventToServer('hud_buttons_show_duel1x1call', {})"/> -->
			<!-- <Label class="PlayerControlsButton" text="?" onactivate="GameEvents.SendCustomGameEventToServer('hud_buttons_show_custom_game_info', {playerid: Game.GetLocalPlayerID()})"/> -->
			<Label class="PlayerControlsButton" text="I" onactivate="SetMinimalisticUIEnabled(GetDotaHud().BHasClass('MinimalisticHudDisabled'))"/>
		</Panel>

		<Panel id="ClickPurgableModifiersOverlay" />
	</Panel>
</root>