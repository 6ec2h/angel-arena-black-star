<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/styles/in_game_chat.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/util.js" />
		<include src="file://{resources}/scripts/in_game_chat.js" />
		<include src="file://{resources}/scripts/customchat.js" />
	</scripts>
	<Panel hittest="false" class="base">
		<Panel hittest="false" id="ChatBg"/>
		<Panel id="SelectionChat" hittest="false">
			<Panel id="SelectionChatMessagesPanel" hittest="false">
				<Panel id="SelectionChatMessages" hittest="false"/>
			</Panel>
			<Panel id="SelectionChatEntryPanel" hittest="false">
				<Panel id="MessageScope" hittest="false">
					<Label id="MessageScopeLabel" text="[T]" hittest="false"/>
				</Panel>
				<TextEntry id="SelectionChatEntry" maxchars="128" oninputsubmit="ChatSendMessage()" placeholder="#chat_placeholder_send_message"/>
			</Panel>
		</Panel>
	</Panel>
</root>